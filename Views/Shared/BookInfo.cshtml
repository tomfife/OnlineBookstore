@model Book

<div class="col-sm-3 m-4">
    <!--Never used this type of column before-->
    <div class="card border-white mb-3 bg-dark" style="width: 20rem;">

        <div class="card-title text-white text-center mt-2 mb-0">
            <h2>@Model.BookTitle</h2>
        </div>

        <div class="row mb-2">
            <div class="col ml-5">
                <span class="badge badge-pill badge-success m-1">@Model.Classification</span>
            </div>
            <div class="col mr-5">
                <!--Never used mr before-->
                <span class="badge badge-pill badge-primary m-1">@Model.Category</span>
            </div>
        </div>

        <ul class="text-white">
            <li><b>Author:</b> @Model.AuthorFirstName @Model.AuthorMiddleName @Model.AuthorLastName</li>
            <li><b>ISBN-13:</b> @Model.ISBN</li>
            <li><b>Publisher:</b> @Model.Publisher</li>
            <li><b>Print Length:</b> @Model.PagesInBook pages</li>
            <li><b>Price:</b> $ @Model.BookPrice </li>
        </ul>

    </div>
</div>