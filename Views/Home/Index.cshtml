@{
    ViewData["Title"] = "Online Bookstore";
}

@model BookListViewModel


<div class="container">
    <div class="row justify-content-md-center">

        @foreach (var book in Model.Books)
        {
            <div class="col-md-auto" style="margin-top: 50px">
                <div class="card border-white mb-3 bg-dark" style="width: 18rem;">

                    <div class="card-title text-white text-center" style="padding: 15px">
                        <h2>@book.BookTitle</h2>
                    </div>

                    <span class="badge badge-pill badge-primary" style="float:right">
                        <p>Classification: @book.Classification</p>
                    </span>

                    <span class="badge badge-pill badge-primary" style="float:right">
                        <p>Category: @book.Category </p>
                    </span>

                    <ul>
                        <li>Author: @book.AuthorFirstName @book.AuthorMiddleName @book.AuthorLastName</li>
                        <li><i class="fas fa-barcode"></i>ISBN-13: @book.ISBN</li>
                        <li>Publisher: @book.Publisher</li>
                        <li>Print Length: @book.PagesInBook pages</li>
                        <li>Price: $@book.BookPrice </li>
                    </ul>

                </div>
            </div>
        }
    </div>
</div>


<div class="text-center">
    <div page-model="@Model.PagingInfo" page-action="Index" page-classes-enabled="true" page-class="btn"
         page-class-normal="btn-outline-dark"
         page-class-selected="btn-primary"
         class="btn-group pull-right m-1"></div>
</div>

